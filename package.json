{
  "name": "oauth2",
  "version": "0.0.0",
  "description": "Servidor OAuth2 con Authorization Code + PKCE, JWT RS256, refresh tokens y JWKS",
  "main": "dist/app.js",
  "engines": {
    "node": "22.18.0",
    "pnpm": "10.20.0"
  },
  "scripts": {
    "audit:fix": "pnpm audit --fix",
    "audit": "pnpm audit",
    "build": "tsc -p tsconfig.build.json",
    "ci:all": "./scripts/test.release.sh",
    "clean": "rm -rf dist coverage *.tsbuildinfo",
    "commit": "git-cz",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "docker:build": "./scripts/docker-build.sh",
    "docker:run": "docker run --rm -p 4000:4000 -e NODE_ENV=development byteberry-oauth2:dev",
    "docker:test": "./scripts/docker-test.sh",
    "lint:fix": "eslint . --fix",
    "lint": "eslint .",
    "postbuild": "tsc-alias -p tsconfig.build.json",
    "prebuild": "npm run clean",
    "quality": "pnpm type-check && pnpm lint && pnpm audit && pnpm build && pnpm test:coverage",
    "release": "semantic-release",
    "start": "node dist/app.js",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "docs:generate": "typedoc --entryPointStrategy expand --out docs src --exclude '**/*.test.ts' --exclude '**/*.spec.ts' --exclude '**/__tests__/**' --exclude '**/__mocks__/**'",
    "docs:serve": "http-server docs -p 8080 -o -c-1",
    "docs:clean": "rimraf docs",
    "docs:build": "pnpm run docs:clean && pnpm run docs:generate",
    "docs:dev": "pnpm run docs:build && pnpm run docs:serve",
    "docs:watch": "nodemon --watch src --ext ts --exec \"pnpm run docs:build\"",
    "docs:ci": "pnpm run docs:build && echo 'Documentation generated successfully'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "http-server": "^14.1.1",
    "jest": "^30.1.3",
    "jest-watch-typeahead": "^2.2.2",
    "jiti": "^2.6.0",
    "jsdoc": "^4.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "semantic-release": "^24.2.9",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "16.4.5",
    "env-var": "^7.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "pnpm": {
    "overrides": {
      "pug-code-gen@<=3.0.2": ">=3.0.3",
      "pug@<3.0.1": ">=3.0.1",
      "pug@<=3.0.2": ">=3.0.3",
      "tmp@<=0.2.3": ">=0.2.4"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "fix",
              "release": "minor"
            },
            {
              "type": "chore",
              "scope": "!release",
              "release": "minor"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
